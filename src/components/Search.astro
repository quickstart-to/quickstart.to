---
import { type Lang } from '@i18n/config';
import { t } from '@utils/language';

interface Props {
  lang: Lang;
  variant?: 'default' | 'hero';
}

const { lang, variant = 'default' } = Astro.props;
---

<div class:list={['search', `search-${variant}`]}>
  <div class="search-input-wrapper">
    <svg class="search-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <circle cx="11" cy="11" r="8"></circle>
      <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
    </svg>
    <input
      type="search"
      id="search-input"
      placeholder={t(lang, 'search.placeholder')}
      class="search-input"
      autocomplete="off"
    />
  </div>
  <div id="search-results" class="search-results"></div>
</div>

<script is:inline>
  // Pagefind integration - loaded dynamically after build
  (async function initSearch() {
    const searchInput = document.getElementById('search-input');
    const searchResults = document.getElementById('search-results');

    if (!searchInput || !searchResults) return;

    let pagefind = null;

    // Try to load Pagefind (only available after build with pagefind CLI)
    try {
      pagefind = await import('/pagefind/pagefind.js');
    } catch {
      console.log('Pagefind not available - search disabled in development');
      return;
    }

    searchInput.addEventListener('input', async (e) => {
      const query = e.target.value;

      if (!query) {
        searchResults.innerHTML = '';
        return;
      }

      const search = await pagefind.search(query);
      const results = await Promise.all(search.results.slice(0, 5).map((r) => r.data()));

      searchResults.innerHTML = results
        .map(
          (result) => `
          <a href="${result.url}" class="search-result">
            <div class="search-result-title">${result.meta.title}</div>
            <div class="search-result-excerpt">${result.excerpt}</div>
          </a>
        `
        )
        .join('');
    });
  })();
</script>

<style>
  .search {
    position: relative;
    width: 100%;
    margin: 0 auto;
  }

  .search-default {
    max-width: 24rem;
  }

  .search-hero {
    max-width: 36rem;
  }

  .search-input-wrapper {
    position: relative;
    display: flex;
    align-items: center;
  }

  .search-icon {
    position: absolute;
    left: 1rem;
    color: var(--color-text-secondary);
    pointer-events: none;
    transition: color 0.2s;
  }

  .search-input {
    width: 100%;
    padding: 0.75rem 1rem 0.75rem 2.75rem;
    font-size: 0.875rem;
    border: 1px solid var(--color-border);
    border-radius: var(--radius);
    background-color: var(--color-bg);
    color: var(--color-text);
    outline: none;
    transition: all 0.2s;
    box-shadow: var(--shadow-sm);
  }

  .search-hero .search-input {
    padding: 1rem 1.25rem 1rem 3.25rem;
    font-size: 1.125rem;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
  }

  .search-hero .search-icon {
    left: 1.25rem;
    width: 24px;
    height: 24px;
  }

  .search-input:focus {
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
  }

  .search-input:focus + .search-icon {
    color: var(--color-primary);
  }

  .search-results {
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    margin-top: 0.5rem;
    background-color: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius);
    box-shadow: var(--shadow-xl);
    max-height: 24rem;
    overflow-y: auto;
    z-index: 100;
  }

  .search-results:empty {
    display: none;
  }

  :global(.search-result) {
    display: block;
    padding: 0.75rem 1rem;
    border-bottom: 1px solid var(--color-border);
    text-decoration: none;
  }

  :global(.search-result:last-child) {
    border-bottom: none;
  }

  :global(.search-result:hover) {
    background-color: var(--color-bg-secondary);
  }

  :global(.search-result-title) {
    font-weight: 500;
    color: var(--color-text);
    margin-bottom: 0.25rem;
  }

  :global(.search-result-excerpt) {
    font-size: 0.75rem;
    color: var(--color-text-secondary);
  }

  :global(.search-result-excerpt mark) {
    background-color: rgba(59, 130, 246, 0.2);
    color: inherit;
  }
</style>
