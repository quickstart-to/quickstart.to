---
interface Props {
  name: string;
  avatar?: string;
  github?: string;
  size?: 'sm' | 'md' | 'lg';
}

const { name, avatar, github, size = 'md' } = Astro.props;

const sizeClass = {
  sm: 'avatar-sm',
  md: 'avatar-md',
  lg: 'avatar-lg',
}[size];

const href = github ? `https://github.com/${github}` : undefined;
const initials = name
  .split(' ')
  .map((n) => n[0])
  .join('')
  .slice(0, 2)
  .toUpperCase();
---

{
  href ? (
    <a
      href={href}
      target="_blank"
      rel="noopener noreferrer"
      class={`avatar ${sizeClass}`}
      title={name}
    >
      {avatar ? (
        <img src={avatar} alt={name} class="avatar-img" loading="lazy" />
      ) : (
        <span class="avatar-initials">{initials}</span>
      )}
    </a>
  ) : (
    <span class={`avatar ${sizeClass}`} title={name}>
      {avatar ? (
        <img src={avatar} alt={name} class="avatar-img" loading="lazy" />
      ) : (
        <span class="avatar-initials">{initials}</span>
      )}
    </span>
  )
}

<style>
  .avatar {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    background-color: var(--color-bg-secondary);
    overflow: hidden;
    flex-shrink: 0;
  }

  .avatar-sm {
    width: 2rem;
    height: 2rem;
    font-size: 0.75rem;
  }

  .avatar-md {
    width: 2.5rem;
    height: 2.5rem;
    font-size: 0.875rem;
  }

  .avatar-lg {
    width: 4rem;
    height: 4rem;
    font-size: 1.25rem;
  }

  .avatar-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .avatar-initials {
    color: var(--color-text-secondary);
    font-weight: 500;
  }

  a.avatar {
    transition: transform 0.2s;
  }

  a.avatar:hover {
    transform: scale(1.1);
  }
</style>
