---
import ThemeToggle from './ThemeToggle.astro';

interface Props {
  id?: string;
}

const { id } = Astro.props;
---

<header class="header">
  <div class="header-container container">
    <a href="/" class="logo">
      <span class="logo-text">quickstart.to</span>
      {id && <span class="logo-separator">/</span>}
      {id && <span class="logo-id">{id}</span>}
    </a>

    <nav class="nav nav-desktop">
      <a href="/" class="nav-link">Home</a>
      <a href="/contributors" class="nav-link">Contributors</a>
    </nav>

    <div class="header-actions">
      <ThemeToggle />
      <a
        href="https://github.com/quickstart-to/quickstart.to"
        target="_blank"
        rel="noopener noreferrer"
        class="github-link"
        aria-label="GitHub"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="currentColor"
        >
          <path
            d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
          ></path>
        </svg>
      </a>

      <button class="mobile-menu-btn" aria-label="Toggle menu" aria-expanded="false">
        <svg class="icon-menu" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="3" y1="12" x2="21" y2="12"></line>
          <line x1="3" y1="6" x2="21" y2="6"></line>
          <line x1="3" y1="18" x2="21" y2="18"></line>
        </svg>
        <svg class="icon-close" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>
  </div>

  <nav class="nav-mobile">
    <a href="/" class="nav-link">Home</a>
    <a href="/contributors" class="nav-link">Contributors</a>
  </nav>
</header>

<script is:inline>
(function() {
  const menuBtn = document.querySelector('.mobile-menu-btn');
  const mobileNav = document.querySelector('.nav-mobile');

  if (menuBtn && mobileNav) {
    menuBtn.addEventListener('click', () => {
      const isOpen = mobileNav.classList.toggle('open');
      menuBtn.setAttribute('aria-expanded', isOpen.toString());
      menuBtn.classList.toggle('open', isOpen);
    });
  }
})();
</script>

<style>
  .header {
    border-bottom: 1px solid var(--color-border);
    background-color: var(--color-bg);
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .header-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 4rem;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 700;
    font-size: 1.25rem;
    color: var(--color-text);
  }

  .logo:hover {
    text-decoration: none;
    color: var(--color-primary);
  }

  .logo-separator {
    color: var(--color-text-secondary);
    margin: 0 0.125rem;
    font-weight: 400;
  }

  .logo-id {
    color: var(--color-primary);
    font-weight: 600;
  }

  .nav {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .nav-link {
    color: var(--color-text-secondary);
    font-size: 0.875rem;
    font-weight: 500;
  }

  .nav-link:hover {
    color: var(--color-text);
  }

  .header-actions {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .github-link {
    color: var(--color-text-secondary);
    display: flex;
    align-items: center;
  }

  .github-link:hover {
    color: var(--color-text);
  }

  /* Mobile menu button */
  .mobile-menu-btn {
    display: none;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    padding: 0;
    border: none;
    background: transparent;
    color: var(--color-text-secondary);
    cursor: pointer;
  }

  .mobile-menu-btn:hover {
    color: var(--color-text);
  }

  .mobile-menu-btn .icon-close {
    display: none;
  }

  .mobile-menu-btn.open .icon-menu {
    display: none;
  }

  .mobile-menu-btn.open .icon-close {
    display: block;
  }

  /* Mobile dropdown menu */
  .nav-mobile {
    display: none;
    flex-direction: column;
    padding: 0.75rem 1rem;
    border-top: 1px solid var(--color-border);
    background-color: var(--color-bg);
  }

  .nav-mobile .nav-link {
    padding: 0.75rem 0;
    border-bottom: 1px solid var(--color-border);
  }

  .nav-mobile .nav-link:last-child {
    border-bottom: none;
  }

  @media (max-width: 640px) {
    .nav-desktop {
      display: none;
    }

    .mobile-menu-btn {
      display: flex;
    }

    .nav-mobile.open {
      display: flex;
    }
  }

  @media (max-width: 480px) {
    .logo {
      font-size: 1.125rem;
    }

    .header-actions {
      gap: 0.5rem;
    }

    .github-link svg {
      width: 20px;
      height: 20px;
    }
  }
</style>
