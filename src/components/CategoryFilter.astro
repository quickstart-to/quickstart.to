---
import { type Lang } from '@i18n/config';
import { t } from '@utils/language';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;

const categories = [
  { key: 'all', label: t(lang, 'category.all') },
  { key: 'tech', label: t(lang, 'category.tech') },
  { key: 'life', label: t(lang, 'category.life') },
];
---

<div class="category-filter">
  {categories.map((cat) => (
    <button
      class={`filter-btn ${cat.key === 'all' ? 'active' : ''}`}
      data-category={cat.key}
    >
      {cat.label}
    </button>
  ))}
</div>

<script>
  function initCategoryFilter() {
    const filterBtns = document.querySelectorAll('.filter-btn');
    const cards = document.querySelectorAll('.quickstart-card');

    // Check URL params for initial category
    const urlParams = new URLSearchParams(window.location.search);
    const initialCategory = urlParams.get('category') || 'all';

    // Set initial active state
    filterBtns.forEach((btn) => {
      const btnCategory = btn.getAttribute('data-category');
      if (btnCategory === initialCategory) {
        btn.classList.add('active');
      } else {
        btn.classList.remove('active');
      }
    });

    // Apply initial filter
    filterCards(initialCategory);

    filterBtns.forEach((btn) => {
      btn.addEventListener('click', () => {
        const category = btn.getAttribute('data-category') || 'all';

        // Update active state
        filterBtns.forEach((b) => b.classList.remove('active'));
        btn.classList.add('active');

        // Filter cards
        filterCards(category);

        // Update URL without reload
        const url = new URL(window.location.href);
        if (category === 'all') {
          url.searchParams.delete('category');
        } else {
          url.searchParams.set('category', category);
        }
        window.history.replaceState({}, '', url.toString());
      });
    });

    function filterCards(category: string) {
      cards.forEach((card) => {
        const cardCategory = card.getAttribute('data-category');
        if (category === 'all' || cardCategory === category) {
          (card as HTMLElement).style.display = '';
        } else {
          (card as HTMLElement).style.display = 'none';
        }
      });
    }
  }

  // Run on page load
  initCategoryFilter();

  // Re-run on Astro page transitions
  document.addEventListener('astro:after-swap', initCategoryFilter);
</script>

<style>
  .category-filter {
    display: flex;
    justify-content: center;
    gap: 0.75rem;
    margin-bottom: 2rem;
    flex-wrap: wrap;
  }

  .filter-btn {
    padding: 0.5rem 1.25rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-text-secondary);
    background-color: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: 2rem;
    cursor: pointer;
    transition: all 0.2s;
  }

  .filter-btn:hover {
    color: var(--color-primary);
    border-color: var(--color-primary);
  }

  .filter-btn.active {
    color: white;
    background-color: var(--color-primary);
    border-color: var(--color-primary);
  }

  @media (max-width: 640px) {
    .category-filter {
      gap: 0.5rem;
    }

    .filter-btn {
      padding: 0.375rem 1rem;
      font-size: 0.8125rem;
    }
  }
</style>
