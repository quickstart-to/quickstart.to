---
import BaseLayout from '@layouts/BaseLayout.astro';
import QuickstartCard from '@components/QuickstartCard.astro';
import CategoryFilter from '@components/CategoryFilter.astro';
import Search from '@components/Search.astro';
import TopContributors from '@components/TopContributors.astro';
import { getAllQuickstarts, getAvailableLanguages } from '@utils/content';
import { defaultLang, type Lang, supportedLangs } from '@i18n/config';
import { t } from '@utils/language';
import { getHomeCanonicalUrl, getDefaultOgImageUrl } from '@utils/seo';
import { generateWebSiteSchema } from '@utils/schema';

const lang = defaultLang;
const canonicalUrl = getHomeCanonicalUrl(lang);
const alternateUrls = supportedLangs.map((l) => ({
  lang: l as typeof l | 'x-default',
  url: getHomeCanonicalUrl(l),
}));
alternateUrls.push({ lang: 'x-default', url: getHomeCanonicalUrl(defaultLang) });
const websiteSchema = generateWebSiteSchema();
const allQuickstarts = await getAllQuickstarts();

// Get unique quickstarts for default language, or fallback
const uniqueIds = [...new Set(allQuickstarts.map((q) => q.id))];
const quickstarts = await Promise.all(
  uniqueIds.map(async (id) => {
    const entry = allQuickstarts.find((q) => q.id === id && q.lang === lang) ??
      allQuickstarts.find((q) => q.id === id);
    if (!entry) return null;

    const availableLanguages = await getAvailableLanguages(id);
    return {
      ...entry,
      availableLanguages,
    };
  })
);

const validQuickstarts = quickstarts.filter(Boolean);
---

<BaseLayout
  title="quickstart.to"
  lang={lang}
  canonicalUrl={canonicalUrl}
  alternateUrls={alternateUrls}
  schemas={websiteSchema}
>
  <section class="hero container">
    <h1 class="hero-title">
      <span class="hero-title-gradient">quickstart.to/<span class="typewriter" id="typewriter"></span></span>
    </h1>
    <p class="hero-subtitle">{t(lang, 'site.description')}</p>
    <Search lang={lang} />
  </section>

  <section class="quickstarts container">
    <CategoryFilter lang={lang} />
    <div class="quickstart-grid">
      {
        validQuickstarts.map((q) => (
          <QuickstartCard
            id={q!.id}
            title={q!.entry.data.title}
            description={q!.entry.data.description}
            category={q!.category}
            lang={q!.lang}
            availableLanguages={q!.availableLanguages}
          />
        ))
      }
    </div>
  </section>

  <section class="container">
    <TopContributors lang={lang} />
  </section>
</BaseLayout>

<script>
  const words = ['Docker', 'React', 'Python', 'Cooking', 'AI', 'Rust', 'everything'];

  function initTypewriter() {
    const el = document.getElementById('typewriter');
    if (!el) return;

    let wordIdx = 0;
    let charIdx = 0;
    let deleting = false;

    function tick() {
      const word = words[wordIdx];

      // Finished on last word - keep cursor blinking
      if (wordIdx === words.length - 1 && charIdx === word.length) {
        return;
      }

      if (deleting) {
        charIdx--;
        el.textContent = word.substring(0, charIdx);

        if (charIdx === 0) {
          deleting = false;
          wordIdx++;
          setTimeout(tick, 400);
        } else {
          setTimeout(tick, 40);
        }
      } else {
        charIdx++;
        el.textContent = word.substring(0, charIdx);

        if (charIdx === word.length) {
          if (wordIdx === words.length - 1) {
            return;
          }
          deleting = true;
          setTimeout(tick, 1800);
        } else {
          setTimeout(tick, 100 + Math.random() * 50);
        }
      }
    }

    setTimeout(tick, 1000);
  }

  initTypewriter();
  document.addEventListener('astro:after-swap', initTypewriter);
</script>

<style>
  .hero {
    text-align: center;
    padding: 4rem 1rem;
  }

  .hero-title {
    font-size: 3rem;
    font-weight: 700;
    margin: 0 0 0.5rem 0;
  }

  .hero-title-gradient {
    background: linear-gradient(135deg, var(--color-primary), #8b5cf6);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .typewriter {
    border-right: 3px solid #8b5cf6;
    padding-right: 2px;
    animation: cursor 0.7s step-end infinite;
  }

  @keyframes cursor {
    0%, 50% {
      border-color: #8b5cf6;
    }
    51%, 100% {
      border-color: transparent;
    }
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--color-text-secondary);
    margin: 0 0 2rem 0;
  }

  .quickstarts {
    padding: 2rem 1rem 4rem;
  }

  .quickstart-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
  }

  @media (max-width: 640px) {
    .hero {
      padding: 2.5rem 0.75rem;
    }

    .hero-title {
      font-size: 1.75rem;
    }

    .typewriter {
      border-right-width: 2px;
    }

    .hero-subtitle {
      font-size: 1rem;
      margin-bottom: 1.5rem;
    }

    .quickstarts {
      padding: 1.5rem 0.75rem 3rem;
    }

    .quickstart-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
  }
</style>
