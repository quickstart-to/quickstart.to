---
import BaseLayout from '@layouts/BaseLayout.astro';
import QuickstartCard from '@components/QuickstartCard.astro';
import CategoryFilter from '@components/CategoryFilter.astro';
import Search from '@components/Search.astro';
import TopContributors from '@components/TopContributors.astro';
import { getAllQuickstarts, getAvailableLanguages } from '@utils/content';
import { defaultLang, type Lang, supportedLangs } from '@i18n/config';
import { t } from '@utils/language';
import { getHomeCanonicalUrl, getDefaultOgImageUrl } from '@utils/seo';
import { generateWebSiteSchema } from '@utils/schema';

const lang = defaultLang;
const canonicalUrl = getHomeCanonicalUrl(lang);
const alternateUrls = supportedLangs.map((l) => ({
  lang: l as typeof l | 'x-default',
  url: getHomeCanonicalUrl(l),
}));
alternateUrls.push({ lang: 'x-default', url: getHomeCanonicalUrl(defaultLang) });
const websiteSchema = generateWebSiteSchema();
const allQuickstarts = await getAllQuickstarts();

// Get unique quickstarts for default language, or fallback
const uniqueIds = [...new Set(allQuickstarts.map((q) => q.id))];
const quickstarts = await Promise.all(
  uniqueIds.map(async (id) => {
    const entry = allQuickstarts.find((q) => q.id === id && q.lang === lang) ??
      allQuickstarts.find((q) => q.id === id);
    if (!entry) return null;

    const availableLanguages = await getAvailableLanguages(id);
    return {
      ...entry,
      availableLanguages,
    };
  })
);

const validQuickstarts = quickstarts.filter(Boolean);
---

<BaseLayout
  title="quickstart.to"
  lang={lang}
  canonicalUrl={canonicalUrl}
  alternateUrls={alternateUrls}
  schemas={websiteSchema}
>
  <div class="page-background"></div>
  
  <section class="hero">
    <div class="hero-content container">
      <div class="hero-badge">
        <span class="badge-text">Open Source â€¢ Community Driven</span>
      </div>
      <h1 class="hero-title">
        The fastest way to learn
        <span class="hero-title-highlight">
          quickstart.to/<span class="typewriter" id="typewriter"></span>
        </span>
      </h1>
      <p class="hero-subtitle">{t(lang, 'site.description')}</p>
      
      <div class="hero-search">
        <Search lang={lang} variant="hero" />
      </div>

      <div class="hero-stats">
        <div class="stat-item">
          <span class="stat-value">{validQuickstarts.length}</span>
          <span class="stat-label">Guides</span>
        </div>
        <div class="stat-separator"></div>
        <div class="stat-item">
          <span class="stat-value">{supportedLangs.length}</span>
          <span class="stat-label">Languages</span>
        </div>
        <div class="stat-separator"></div>
        <div class="stat-item">
          <span class="stat-value">Free</span>
          <span class="stat-label">Forever</span>
        </div>
      </div>
    </div>
  </section>

  <section class="quickstarts container">
    <div class="section-header">
      <h2 class="section-title">Explore Guides</h2>
      <CategoryFilter lang={lang} />
    </div>
    
    <div class="quickstart-grid">
      {
        validQuickstarts.map((q) => (
          <QuickstartCard
            id={q!.id}
            title={q!.entry.data.title}
            description={q!.entry.data.description}
            category={q!.category}
            lang={q!.lang}
            availableLanguages={q!.availableLanguages}
          />
        ))
      }
    </div>
  </section>

  <section class="contributors container">
    <div class="contributors-header">
      <h2 class="section-title">Top Contributors</h2>
      <p class="section-desc">Thanks to everyone who helps maintain these guides.</p>
    </div>
    <TopContributors lang={lang} />
  </section>
</BaseLayout>

<script>
  const words = ['Docker', 'React', 'Python', 'Cooking', 'AI', 'Rust', 'everything'];

  function initTypewriter() {
    const el = document.getElementById('typewriter');
    if (!el) return;

    let wordIdx = 0;
    let charIdx = 0;
    let deleting = false;

    function tick() {
      const word = words[wordIdx];

      // Finished on last word - keep cursor blinking
      if (wordIdx === words.length - 1 && charIdx === word.length) {
        return;
      }

      if (deleting) {
        charIdx--;
        el.textContent = word.substring(0, charIdx);

        if (charIdx === 0) {
          deleting = false;
          wordIdx++;
          setTimeout(tick, 400);
        } else {
          setTimeout(tick, 40);
        }
      } else {
        charIdx++;
        el.textContent = word.substring(0, charIdx);

        if (charIdx === word.length) {
          if (wordIdx === words.length - 1) {
            return;
          }
          deleting = true;
          setTimeout(tick, 1800);
        } else {
          setTimeout(tick, 100 + Math.random() * 50);
        }
      }
    }

    setTimeout(tick, 1000);
  }

  initTypewriter();
  document.addEventListener('astro:after-swap', initTypewriter);
</script>

<style>
  .page-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 600px;
    background: radial-gradient(circle at 50% 0%, rgba(59, 130, 246, 0.08) 0%, transparent 70%);
    z-index: -1;
    pointer-events: none;
  }

  .hero {
    padding: 6rem 1rem 4rem;
    position: relative;
    overflow: hidden;
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    max-width: 56rem;
    margin: 0 auto;
  }

  .hero-badge {
    margin-bottom: 2rem;
    display: inline-block;
  }

  .badge-text {
    background-color: var(--color-bg-secondary);
    color: var(--color-primary);
    font-size: 0.875rem;
    font-weight: 600;
    padding: 0.5rem 1rem;
    border-radius: 9999px;
    border: 1px solid var(--color-border);
  }

  .hero-title {
    font-size: 3.5rem;
    font-weight: 800;
    letter-spacing: -0.02em;
    margin: 0 0 1.5rem 0;
    line-height: 1.1;
    color: var(--color-text);
  }

  .hero-title-highlight {
    display: block;
    margin-top: 0.5rem;
    background: linear-gradient(135deg, var(--color-primary), var(--color-accent));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .typewriter {
    border-right: 4px solid var(--color-accent);
    padding-right: 4px;
    animation: cursor 0.9s step-end infinite;
  }

  @keyframes cursor {
    0%, 50% { border-color: var(--color-accent); }
    51%, 100% { border-color: transparent; }
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--color-text-secondary);
    margin: 0 0 3rem 0;
    max-width: 36rem;
    line-height: 1.6;
  }

  .hero-search {
    width: 100%;
    margin-bottom: 3rem;
    display: flex;
    justify-content: center;
  }

  .hero-stats {
    display: flex;
    align-items: center;
    gap: 2rem;
    color: var(--color-text-secondary);
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .stat-value {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-text);
  }

  .stat-label {
    font-size: 0.875rem;
    font-weight: 500;
  }

  .stat-separator {
    width: 1px;
    height: 24px;
    background-color: var(--color-border);
  }

  .quickstarts {
    padding: 2rem 1rem 6rem;
  }

  .section-header {
    margin-bottom: 3rem;
    text-align: center;
  }

  .section-title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    color: var(--color-text);
  }
  
  .section-desc {
    color: var(--color-text-secondary);
    max-width: 30rem;
    margin: 0.5rem auto 0;
  }

  .quickstart-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
    gap: 2rem;
  }
  
  .contributors {
    padding-bottom: 6rem;
    text-align: center;
  }
  
  .contributors-header {
    margin-bottom: 3rem;
  }

  @media (max-width: 640px) {
    .hero {
      padding: 4rem 1rem 3rem;
    }

    .hero-title {
      font-size: 2.25rem;
    }

    .typewriter {
      border-right-width: 3px;
    }

    .hero-subtitle {
      font-size: 1.125rem;
      margin-bottom: 2rem;
    }
    
    .hero-stats {
      gap: 1rem;
    }
    
    .stat-value {
      font-size: 1.25rem;
    }

    .quickstarts {
      padding-bottom: 4rem;
    }

    .quickstart-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }
</style>
