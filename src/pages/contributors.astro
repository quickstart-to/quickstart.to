---
import BaseLayout from '@layouts/BaseLayout.astro';
import ContributorRanking from '@components/ContributorRanking.astro';
---

<BaseLayout
  title="Contributors"
  description="Thanks to everyone who helps maintain these guides."
>
  <section class="contributors-page container">
    <header class="page-header">
      <h1>Contributors</h1>
      <p>Thanks to everyone who helps maintain these guides.</p>
    </header>

    <ContributorRanking />
  </section>
</BaseLayout>

<style>
  .contributors-page {
    padding: 2rem 1rem 4rem;
    max-width: 48rem;
  }

  .page-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .page-header h1 {
    font-size: 2rem;
    margin: 0 0 0.5rem 0;
  }

  .page-header p {
    color: var(--color-text-secondary);
    margin: 0;
  }
</style>
